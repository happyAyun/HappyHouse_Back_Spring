<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.happyhouse.model.mapper.UserMapper">

	<select id="idCheck" parameterType="string" resultType="int">
		select count(userid)
		from user
		where userid = #{userId}
	</select>

	<insert id="registerUser" parameterType="UserDto">
		insert into user (userid, name, password, email, joindate)
		values (#{userId}, #{name}, #{password}, #{email}, now())
	</insert>

	<select id="login" parameterType="map" resultType="UserDto">
		select name, userid, email
		from user
		where userid = #{userId} and password = #{password}
	</select>
	
	<!-- <select id="listUser" resultType="UserDto">
		select userid, password, name, email, date_format(joindate, '%y.%m.%d') joindate
		from user
		order by joindate desc;
	</select> -->
	
	<select id="getUser" parameterType="String" resultType="UserDto">
		<!-- select userid, name, email, date_format(joindate, '%y.%m.%d') joindate -->
		select userid, name, email
		from user
		where userid = #{userId}
	</select>
	
	<update id="updateUser" parameterType="UserDto">
		update user
		<trim prefix="set" suffixOverrides=",">
			<if test="name != null">name = #{name},</if>
			<if test="email != null">email = #{email},</if>
		</trim>
		where userid = #{userId}
	</update>
	
	<delete id="deleteUser" parameterType="String">
		delete from user
		where userid = #{userId}
	</delete>

</mapper>